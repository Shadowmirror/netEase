.recommendContent {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.recommendItem {
    margin-top: 20rpx;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* 水平居中 */
    align-items: center;
    /* 垂直居中 */
}

.recommendImg {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}

.recommendText {
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical; /*设置对其模式*/
    -webkit-line-clamp: 2; /*设置多行的行数*/
    text-align: center;
}

.more{
    margin-top: 50rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}